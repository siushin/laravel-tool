{
    "name": "siushin/laravel-tool",
    "description": "LaravelTool 基于 Laravel 的枚举、助手函数、Trait特征、工具类、模型转换等常用工具类及助手函数。",
    "type": "library",
    "keywords": [
        "php",
        "laravel",
        "tool",
        "helper"
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "phpoffice/phpspreadsheet": "^4.5",
        "siushin/util": "^1.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Siushin\\LaravelTool\\": "src/"
        },
        "files": [
            "src/Funcs/LaraDateTime.php",
            "src/Funcs/LaraRequest.php",
            "src/Funcs/LaraResponse.php"
        ]
    },
    "authors": [
        {
            "name": "siushin",
            "email": "siushin@163.com",
            "homepage": "http://www.siushin.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "Siushin\\LaravelTool\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "Siushin\\LaravelTool\\Installer::postInstall"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Siushin\\LaravelTool\\ServiceProvider"
            ]
        }
    }
}
